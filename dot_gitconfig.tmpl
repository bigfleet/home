[user]
    name = {{ .name }}
    email = {{ .email | quote }}
[init]
    defaultBranch = main

[core]
    autocrlf = input
    editor = code --wait
{{ if contains "WSL" .chezmoi.kernel.osrelease }}
    sshCommand = ssh.exe
{{ end }}

# Conditional includes for work/personal configurations
# These files are managed by chezmoi and populated from init-time prompts.
[includeIf "gitdir:~/src/work/"]
    path = ~/.gitconfig-work

[includeIf "gitdir:~/src/personal/"]
    path = ~/.gitconfig-personal

